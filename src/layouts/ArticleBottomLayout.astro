---
import { getCollection } from "astro:content"

type Props = {
  currentTitle: string;
}

const { currentTitle } = Astro.props;

function parseDate(dateStr: string): Date {
  const dateParts = dateStr.split(' ');

  if (dateParts.length === 3) {
    const [month, day, year] = dateParts;
    return new Date(`${month} ${parseInt(day)}, ${year}`);
  } else if (dateParts.length === 1) {
    return new Date(dateStr);
  } else {
    throw new Error('Unexpected date format');
  }
}

const items = (await getCollection("project"))
  .sort((a, b) => parseDate(a.data.dateFormatted).getTime() - parseDate(b.data.dateFormatted).getTime());

if (items.length <= 1) {
  return null;
}

const index = items.findIndex(x => x.data.title === currentTitle);
const prev = items[(index - 1 + items.length) % items.length];
const next = items[(index + 1) % items.length];
---

<div class="w-full max-w-2xl mx-auto">
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
    {prev && (
    <a href={`/project/${prev.slug}`} class="group p-4 gap-5 flex items-center border rounded-lg hover:bg-neutral-600/5 hover:dark:bg-neutral-400/10 border-neutral-600/15 dark:border-neutral-400/20 duration-300 text-neutral-600 dark:text-neutral-400 blend no-underline">
        <div class="order-2 w-full h-full group-hover:text-black group-hover:dark:text-white blend">
          <div class="flex flex-wrap gap-2">
            <div class="text-sm">
              Previous
            </div>
          </div>
          <div class="text-base font-semibold mt-2 text-black dark:text-white">
            {prev.data.title}
          </div>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="order-1 stroke-current group-hover:stroke-black group-hover:dark:stroke-white rotate-180">
          <line x1="5" y1="12" x2="19" y2="12" class="scale-x-0 group-hover:scale-x-100 translate-x-4 group-hover:translate-x-1 transition-all duration-300 ease-in-out" />
          <polyline points="12 5 19 12 12 19" class="translate-x-0 group-hover:translate-x-1 transition-all duration-300 ease-in-out" />
        </svg>
      </a>
    )}
    {next && (
    <a href={`/project/${next.slug}`} class="group p-4 gap-5 flex items-center border rounded-lg hover:bg-neutral-600/5 hover:dark:bg-neutral-400/10 border-neutral-600/15 dark:border-neutral-400/20 duration-300 text-neutral-600 dark:text-neutral-400 blend no-underline">
        <div class="w-full h-full text-right group-hover:text-black group-hover:dark:text-white blend">
          <div class="text-sm">
            Next
          </div>
          <div class="text-base font-semibold mt-2 text-black dark:text-white">
            {next.data.title}
          </div>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="stroke-current group-hover:stroke-black group-hover:dark:stroke-white">
          <line x1="5" y1="12" x2="19" y2="12" class="scale-x-0 group-hover:scale-x-100 translate-x-4 group-hover:translate-x-1 transition-all duration-300 ease-in-out" />
          <polyline points="12 5 19 12 12 19" class="translate-x-0 group-hover:translate-x-1 transition-all duration-300 ease-in-out" />
        </svg>
      </a>
    )}
  </div>
</div>
