---
import AboutExperience from "../components/about-experience.astro";
import PageHeading from "../components/page-heading.astro";
import Layout from "../layouts/main.astro";
import experiences from "../collections/experiences.json";
import skills from "../collections/skills.json";
import * as Si from 'react-icons/si';
import { FaJava } from "react-icons/fa";
---

<Layout title="ABOUT - Shuhey Koyama">
  <section class="relative z-20 max-w-4xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="About Me"
      description="Hello üëã I'm an emerging HCI (Human-Computer Interaction) researcher and engineer based in Tsukuba, Japan. I'm passionate about exploring the relationship between people, computers, and space through sound. I'm a Vimmer and always interact with computers."
    />

    <img src="/assets/images/about.webp" class="relative z-30 w-full mt-10 mb-14 rounded-xl" />

    <h2
      class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200"
    >
      Short Bio
    <p
      class="py-2 text-sm leading-6 text-gray-600 dark:text-neutral-400 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
    >
      HCI researcher üéß, engineer üßë‚Äçüíª, designer üé®.
    </p>

    <h2
      class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200"
    >
      Skills
    <ul
      class='py-2 inline-flex  flex-wrap gap-4'>
      {
        skills.map(({ name, icon, level}) => {
          const IconComponent = icon === 'FaJava' ? FaJava : Si[icon];
          return (
            <li class='flex items-center gap-2 px-1 py-0.5 text-sm leading-6 text-gray-600 dark:text-neutral-400 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg' title={level}>
              {IconComponent && <IconComponent size={16} className="text-red-600" />}
              <span>{name}</span>
            </li>
          )
        })
      }
    </ul>

    <h2
      class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200"
    >
      Experiences
    </h2>
    <div class="px-5 py-5">
      {
        experiences.map((experience) => {
          return (
            <div class="pb-10 border-l border-gray-200 last:border-l-0 dark:border-neutral-700">
              <AboutExperience
                dates={experience.dates}
                role={experience.role}
                company={experience.company}
                description={experience.description}
                logo={experience.logo}
              />
            </div>
          )
        })
      }
    </div>

    <h2 class="mt-1 mb-2 text-2xl font-bold lg:mt-8 sm:mt-4 dark:text-neutral-200">Let's Connect</h2>
    <p
      class="text-sm leading-6 text-gray-600 dark:text-neutral-400 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
    >
      If you want to stay up to date with my work be sure to <a
        href="https://twitter.com/shuheykoyama"
        target="_blank"
        class="text-red-600 underline">follow me on twitter</a
      >, or you can send me an <a href="mailto:shuheykoyama@gmail.com" class="text-red-600 underline"
        >email</a
      > and I'll be sure to get back to you.
    </p>
  </section>
</Layout>
