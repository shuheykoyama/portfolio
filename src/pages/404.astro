---
import Layout from "../layouts/main.astro";
---

<Layout title="404 - Shuhey Koyama">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0 mt-16 md:mt-24 lg:mt-32">
    <div class="relative">
      <div>
        <video
          class="w-full"
          style="aspect-ratio: 16 / 9;"
          autoplay="autoplay"
          muted="muted"
          loop="loop"
          playsinline
        >
          <source src="/assets/images/404.webm" type="video/mp4" />
        </video>
      </div>

      <div class="absolute inset-0 flex flex-col items-center justify-center">
        <h1 class="text-4xl font-bold text-white mb-2 sm:text-5xl lg:text-6xl">
          404
        </h1>
      </div>
    </div>

    <div class="text-center py-2 lg:py-0">

      <h2
        class="mt-8 mb-6 text-2xl font-bold lg:mt-12 sm:mt-10 dark:text-neutral-200"
      >
        Oops, not found...
      </h2>

      <a
        class="text-red-600 underline text-sm leading-6 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
        href="/"
      >
        Go back to index page
        <svg
          class="w-2.5 h-2.5 ml-1 inline-block" 
          viewBox="0 0 13 15"
          xmlns="http://www.w3.org/2000/svg"
          style="vertical-align: middle;"
        >
          <g
            stroke="none"
            stroke-width="1"
            fill="none"
            fill-rule="evenodd"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <g
              transform="translate(0.666667, 2.333333)"
              stroke="currentColor"
              stroke-width="2.4"
            >
              <polyline points="5.33333333 0 10.8333333 5.5 5.33333333 11" />
              <line x1="10.8333333" y1="5.5" x2="0.833333333" y2="5.16666667" />
            </g>
          </g>
        </svg>
      </a>

    </div>
  </section>
</Layout>
